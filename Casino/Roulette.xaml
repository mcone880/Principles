            <Button Grid.Row="3" Grid.Column="8" Content="11" FontSize="35" Click="Button_Click" Foreground="White" Background="Black"></Button>
            <Button Grid.Row="2" Grid.Column="8" Content="12" FontSize="35" Click="Button_Click" Foreground="White" Background="Red"></Button>
            <Button Grid.Row="4" Grid.Column="9" Content="13" FontSize="35" Click="Button_Click" Foreground="White" Background="Black"></Button>
            <Button Grid.Row="3" Grid.Column="9" Content="14" FontSize="35" Click="Button_Click" Foreground="White" Background="Red"></Button>
            <Button Grid.Row="2" Grid.Column="9" Content="15" FontSize="35" Click="Button_Click" Foreground="White" Background="Black"></Button>
