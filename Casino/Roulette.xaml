            <Button Grid.Row="2" Grid.Column="6" Content="6" FontSize="35" Click="Button_Click" Foreground="White" Background="Black"></Button>
            <Button Grid.Row="4" Grid.Column="7" Content="7" FontSize="35" Click="Button_Click" Foreground="White" Background="Red"></Button>
            <Button Grid.Row="3" Grid.Column="7" Content="8" FontSize="35" Click="Button_Click" Foreground="White" Background="Black"></Button>
            <Button Grid.Row="2" Grid.Column="7" Content="9" FontSize="35" Click="Button_Click" Foreground="White" Background="Red"></Button>
