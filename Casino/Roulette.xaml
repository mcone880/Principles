        xmlns:local="clr-namespace:Casino"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Roulette" Height="450" Width="900" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Grid >
            <Grid.Background>
                <ImageBrush ImageSource="/GenericFeltMat.jpeg"></ImageBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
