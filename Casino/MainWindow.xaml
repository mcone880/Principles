<Window x:Class="Casino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casino"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/GenericFeltMat.jpeg"/>
        </Grid.Background>
        <Image x:Name="Main_Image" Source="/Assets/OverallUI/CasinoIcon.png" Margin="155,32,155,136"/>
        <Image x:Name="StartButtonImage" HorizontalAlignment="Center" Height="78" Margin="0,316,0,0" VerticalAlignment="Top" Width="182" Source="/ButtonUp.png" Stretch="Fill"/>
        <Image x:Name="CreditsButtonImage" HorizontalAlignment="Left" Height="54" Margin="642,356,0,0" VerticalAlignment="Top" Width="126" Source="/ButtonUp.png" Stretch="Fill"/>
        <Button x:Name="StartButton" Margin="309,316,309,40" Content="START" Click="MainMenu" FontSize="36" FontFamily="Bodoni MT Black" Background="{x:Null}">
        </Button>
        <Button x:Name="CreditsButton" Margin="642,356,32,24" Content="CREDITS" Click="CreditsButton_Click" FontSize="22" FontFamily="Bodoni MT Black" Background="{x:Null}" >
        </Button>

    </Grid>
</Window>
