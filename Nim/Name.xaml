<Window x:Class="Nim.Name"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Name" Height="450" Width="800" ResizeMode="NoResize">
    <DockPanel>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Background.jpeg"></ImageBrush>
            </Grid.Background>
        
            <Label FontSize="30" Margin="200,10,200,350" FontWeight="Bold">Please enter your name</Label>
            <Label FontSize="30" Margin="50,82,550,275">Player One</Label>
            <TextBox Margin="50,164,573,217" Name="playerOne"/>
            <Label FontSize="30" Margin="550,78,50,275">Player Two</Label>
            <TextBox Margin="550,164,50,217" Name="playerTwo"/>

            <Button Margin="50,345,624,32" FontSize="20" FontWeight="Bold" Name="backButton" Click="backButton_Click">Back</Button>
            <Button Margin="300,246,302,119" FontSize="30" FontWeight="Bold" Name="nextButton" Click="nextButton_Click">Next</Button>
        </Grid>
    </DockPanel>
</Window>
