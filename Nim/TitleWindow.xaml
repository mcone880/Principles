<Window x:Class="Nim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Game of Nim" Height="450" Width="800">
    <Grid>
        <Grid.Background >
            <ImageBrush ImageSource="/Background.jpeg" />
        </Grid.Background>
        <StackPanel Margin="10">
            <TextBlock Text="NIM" FontWeight="DemiBold" Foreground="LightGray" FontSize="64" Margin="50" Width="135" TextAlignment="Center" />
            <Button x:Name="btnStart" Content="START" FontSize="32" Margin="10" Width="100" Height="50" Background="Green" Foreground="LightGray" BorderThickness="1" BorderBrush="Black" Click="btnStart_Click"/>
            <Button x:Name="btnQuit" Content="QUIT" FontSize="32" Margin="10" Width="100" Height="50" Background="DarkRed" Foreground="LightGray" BorderThickness="1" BorderBrush="Black" Click="btnQuit_Click"/>
        </StackPanel>
    </Grid>
</Window>
