<Window x:Class="Nim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Margin="10">
            <TextBlock Text="NIM" FontSize="64" Margin="10"/>
            <Button x:Name="btnStart" Content="START" FontSize="32" Margin="10" Width="100" Height="50" Click="btnStart_Click"/>
            <Button x:Name="btnQuit" Content="QUIT" FontSize="32" Margin="10" Width="100" Height="50" Click="btnQuit_Click"/>
        </WrapPanel>
    </Grid>
</Window>
